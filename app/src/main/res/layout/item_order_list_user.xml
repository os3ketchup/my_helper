<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:barrierMargin="36dp"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_user_short"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/circle_background"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:gravity="center"
        android:text="FU"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dasdasdasdas\ndsadasdasdsadas\ndasdasdasdasdasd"
        android:textSize="16sp"
        android:padding="14dp"
        android:layout_margin="8dp"
        android:background="@drawable/shaped_background"
        app:layout_constraintTop_toBottomOf="@id/tv_user_short"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.7"


        />

</androidx.constraintlayout.widget.ConstraintLayout>

